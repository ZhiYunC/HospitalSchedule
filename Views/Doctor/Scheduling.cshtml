<body style="background-color:  rgba(154, 199, 195, 0.3);">
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script> *@
    <div id="sharedContentContainer"></div>
    <div class="content">
        <div class="buttoncontainer">    
            <div class="flex" style="margin: 15px auto;">
                <div  style="font-size:26px;">請選擇不想排班的日期</div>       
                <div class="dropdown-date" style="margin-left:15px;">
                    <select name="yearSelector" id="yearSelector" class="button-style">
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                    </select>
                    <select name="monthSelector" id="monthSelector" class="button-style">
                        <option value="1">一月</option>
                        <option value="2">二月</option>
                        <option value="3">三月</option>
                        <option value="4">四月</option>
                        <option value="5">五月</option>
                        <option value="6">六月</option>
                        <option value="7">七月</option>
                        <option value="8">八月</option>
                        <option value="9">九月</option>
                        <option value="10">十月</option>
                        <option value="11">十一月</option>
                        <option value="12">十二月</option>
                    </select>
                </div>
                <button class="save-scheduling" id="SaveSchedule" type="submit" style="margin-left:20px;">儲存日期</button>
            </div>
            <table id="calendarrejust" style="margin: 15px auto;">
                <thead>
                    <tr>
                        <th class="week">週日</th>
                        <th>週一</th>
                        <th>週二</th>
                        <th>週三</th>
                        <th>週四</th>
                        <th>週五</th>
                        <th class="week">週六</th>
                    </tr>
                </thead>
                <tbody id="calendar-body">
                    <!-- 這裡會由 JavaScript 動態生成月曆的日期 -->
                </tbody>
            </table> 
        </div>
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Doctor/Scheduling.js" asp-append-version="true"></script>
    <script>
        // 使用 fetch 顯示 Share 導航欄的檔案
        $(document).ready(function() {
            $('#sharedContentContainer').load('DoctorShare', function() {
                // 加载完成后执行的操作
                setupNavLinks();
            });
        }); 
        function setupNavLinks() {
            console.log("setupNavLinks function called"); // Add this line for debugging
            $('#index,#history').removeClass('active');
            $('#scheduling').addClass('active');
        }
