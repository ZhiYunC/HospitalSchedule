@{ Layout = null; } @*取消導航欄*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>選擇科別病房</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            margin-top: 100px;
            padding: 0;
            background-color: white;
        }

        .button-style {
            background-color: transparent;
            border: none;
            color: #333;
            cursor: pointer;
            padding: 15px;
            text-decoration: none;
            @* position: relative; *@
            transition: color 0.3s;
        }

        .button-style:hover {
            color: #FFD1A4;
        }

        .person {
            font-size: 12px;
            margin-top: 2px;
            color: #555;
        }
        /*科別按鈕*/
        .department-buttons {
            margin-top: 20px;
        }
        .department-buttons button {
            background-color:rgba(103, 102, 102, 0.82);
            border: none;
            @* color: #333; *@
            color: white;
            cursor: pointer;
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            box-shadow: 0 4px 8px rgba(5, 5, 5, 0.2);
        }
        .department-buttons button.selected {
            background-color:#4A79D1;
            color: white;
        }
        

        /*小科別按鈕*/
        .sub-department-buttons {
            margin-top: 20px;
            width: 1000px;
            @* margin-left: 15%;   *@
        }
        .sub-department-buttons button {
            background-color:white;
            border: none;
            color: rgb(0, 0, 0);
            cursor: pointer; /*鼠標指針將變為手型，提示用戶*/
            padding: 10px;
            text-decoration: none;/*去掉超連結的下劃線*/
            margin: 5px;
            font-size: 16px;
            border-radius: 10px;
            border: 2px solid #4A79D1;
        }
        .sub-department-buttons button.selected {
            background-color:#4A79D1;
        }


        /*病房按鈕*/
        .ward-buttons {
            margin-top: 20px;
        }
        .ward-buttons button{
            background-color:rgba(103, 102, 102, 0.82);
            border: none;
            @* color: #333; *@
            color: white;
            cursor: pointer;
            padding: 10px;
            text-decoration: none;
            margin: 0 10px;
            font-size: 18px;
            box-shadow: 0 4px 8px rgba(5, 5, 5, 0.2);
        }
        .ward-buttons button.selected {
            background-color:#4A79D1;
            color: rgb(255, 255, 255);
        }


        /* "開始排班" 按鈕樣式 */
        .start-scheduling {
            text-align: center;
        }
        .start-scheduling button {
            background-color:#5B9782 ;
            background-color: #5B9B80;
            color: rgb(255, 255, 255);
            padding: 15px 20px;
            font-size: 16px;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            margin-top: 70px;
        }

        .start-scheduling button:hover {
            background-color: #8BBBA6;
        }
        /**/
        .top{
            text-align: center;
            margin-top:50px;
        }

    </style>
</head>
<body>

    <div id="sharedContentContainer"></div>
    <div class="top">
        <h2 id="currentMonth">請選擇科別</h2>
        @* 書榆 *@
        <!-- 表單 -->
        <div class="d-flex flex-column align-items-center">
            <!-- 科別 -->
            <!-- 科別按鈕組 -->
            <div class="department-buttons" role="group" aria-label="Department Buttons">
                <button type="button" data-department="internal">內科部</button>
                <button type="button" data-department="surgery">外科部</button>
                <button type="button" data-department="cardiovascular">心臟血管醫學部</button>
                <button type="button" data-department="pediatrics">兒童醫學部</button>
                <button type="button" data-department="obstetrics">婦產部</button>
                <button type="button" data-department="specialties">其他專科</button>
                <button type="button" data-department="feature">特色中心</button>
                <button type="button" data-department="covid">新冠肺炎專區</button>
            </div>

            <!-- 細分科別按鈕將顯示在這個容器內 -->
            <div class="center">   
                <div id="sub-departments" class="sub-department-buttons"></div>
            </div>
        </div>
        @* 書榆 *@
        <h2>請選擇病房</h2>
        <div id="ward-btn" >
            <!-- 病房按鈕 -->
            <div class="ward-buttons">
                <button type="ward" >普通病房/一般病房</button>
                <button type="ward"  >加護病房</button>
            </div>
        </div>
        <div class="start-scheduling">
            <button id="startSchedulingBtn">開始排班</button>
        </div>
    </div>
    <script src="~/js/schedule.js" asp-append-version="true"></script>
    <!-- 省略其他內容 -->

    <script>
        // 使用 fetch 加载共享的 HTML 内容
        fetch('/Manager/Share')
            .then(response => response.text())
            .then(html => {
                // 将加载的 HTML 插入到共享容器中
                document.getElementById('sharedContentContainer').innerHTML = html;
            }
        );
        
    </script>

</body>
</html>



