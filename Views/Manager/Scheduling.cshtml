@using Demo.Models;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>設置醫生班數及不想上班日</title>
    <link href="../css/Manager/Scheduling.css" rel="stylesheet">
    <link href="../css/Container.css" rel="stylesheet">
    <link href="../css/Buttons.css" rel="stylesheet">
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"> *@
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;

            padding: 0;
            background-color:white ;
            /* background-color: #d3e6f0c1; */
            background-color: rgba(152, 203, 199, 0.741);
        }
        .list-group-item .selected{
            background-color: #e70707;
        }
        .tablecontainer{
            margin:10px 50px 50px 20px !important;
           
        } 
        .buttoncontainer{
            margin:50px 50px 10px 20px/*上右下左*/!important;
        }
    </style>
</head>
<body style="background-color:  rgba(154, 199, 195, 0.3);">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="bootstrap.bundle.min.js"></script> *@
    <div id="sharedContentContainer"></div>
    <div class="flex">
        <!-- 原本左邊的地方 -->
        <!-- 左側導航欄 -->
        <div class="d-flex align-items-start" >
            <div class="left-nav">
                <h3 style="font-size:22px;font-weight:bold;margin:10px;">  部門 </h3>
                <hr style="margin:2px;">
                <button class="flex" value="內科部">內科部
                    <div class="finished" data-department="internal">已排班</div> 
                </button>
                <button class="flex" value="外科部">外科部
                    <div class="finished" data-department="internal">已排班</div> 
                </button>
                <button class="flex" value="心臟血管醫學部">心臟血管醫學部
                    <div class="finished" data-department="internal">已排班</div> 
                </button>
                <button class="flex" value="兒童醫學部">兒童醫學部
                    <div class="finished" data-department="internal">已排班</div> 
                </button>
                <button class="flex" value="婦產部">婦產部
                    <div class="finished" data-department="internal">已排班</div> 
                </button>
                <button class="flex" value="其他專科">其他專科
                    <div class="unfinished" data-department="internal">未排班</div> 
                </button>
                <button class="flex" value="特色中心">特色中心
                    <div class="unfinished" data-department="internal">未排班</div> 
                </button>
                <button class="flex" value="新冠肺炎專區">新冠肺炎專區
                    <div class="unfinished" data-department="internal">未排班</div> 
                </button>
                <hr style="margin:2px;">
            </div> 
        </div>
        <!-- 右邊 -->
        <div class="content" >
            <!-- 選擇按鈕 -->
            <div class="buttoncontainer">
                <div id="sub-departments" class="row row-cols sub-department-buttons">請點選科別！</div>
            </div>    
            <div class="tablecontainer">
                <form method="post" action="/Manager/Scheduling">
                    <!-- section1 -->
                    <div class="list-background">
                            <!-- 顯示所選值的元素 -->
                            <div class="selected-info">
                                <h3 style="font-size:22px;margin:10px;">科別：</h3>
                                <h3 id="selectedDepartment" style="font-size:22px;margin:10px 5px 10px 5px;"></h3>
                                <h3 style="font-size:22px;margin:10px;">病房：一般病房</h3>
                                <p id="selectedWard" name="ward" value="一般病房" style="font-size:22px;margin:10px 5px 10px 5px;"></p>
                            </div>
                            <ul id="doctorList">
                                <!-- 醫生名字和班數選擇按鈕將在這裡動態添加 -->
                                <div class="content">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>醫師</th>
                                                <th>一般病房</th>
                                                
                                                @* <th>日期設定</th> *@
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="flex" style="justify-content: center;">
                                    <div class="save-scheduling" style="margin-right:25px;">
                                        <button id="SaveSchedule"class="button" type="submit">儲存班數</button>
                                    </div>
                                    <div class="start-scheduling" style="margin-left:25px;">
                                        <button id="StartSchedule"class="button" type="submit">開始排班</button>
                                    </div>
                                </div>
                            </ul>
                            
                    </div>  
                    <!-- section2 -->
                    @* <div class="list-background">
                            <!-- 顯示所選值的元素 -->
                            <div class="selected-info">
                                <h3>科別：</h3>
                                <h3 id="selectedDepartment"></h3>
                                <h3>病房：一般病房</h3>
                                <p id="selectedWard" name="ward" value="一般病房"></p>
                            </div>
                            <ul id="doctorList">
                                <!-- 醫生名字和班數選擇按鈕將在這裡動態添加 -->
                                <div class="center">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>醫師</th>
                                                <th>平日班數</th>
                                                <th>假日班數</th>
                                                @* <th>日期設定</th> *@
                                            @* </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="start-scheduling">
                                    <button id="SaveSchedule"class="button" type="submit">儲存班數及日期</button>
                                </div>
                            </ul>
                            
                    </div>   *@ 
                </form>
            </div>
        </div>    
    </div>   
    @* <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>  *@
    <script src="/lib/jquery/dist/jquery.min.js"></script> 
    <script>
        // 使用 fetch 顯示 Share 導航欄的檔案
         $(document).ready(function() {
            $('#sharedContentContainer').load('ManagerShare', function() {
                // 加载完成后执行的操作
                setupNavLinks();
            });
        }); 
        function setupNavLinks() {
            console.log("setupNavLinks function called"); // Add this line for debugging
            $('#index,#history').removeClass('active');
            $('#scheduling').addClass('active');
        }   
    </script>
    <script src="~/js/Manager/Scheduling.js" asp-append-version="true"></script>
    
</body>
</html>
