        //從資料庫讀取資料
        document.addEventListener('DOMContentLoaded', function() {
            // 获取医生列表
            fetch('doctor_list.php')
                .then(response => response.json())
                .then(doctorList => {
                    const doctorListElement = document.getElementById('doctorList');

                    doctorList.forEach(doctor => {
                        const listItem = document.createElement('li');
                        listItem.innerHTML = `
                            <span>${doctor.doctor_name}</span>
                            <input type="number" id="${doctor.doctor_id}" min="0" max="30" value="0">
                        `;
                        doctorListElement.appendChild(listItem);
                    });
                })
                .catch(error => console.error('Error fetching doctor list:', error));
        });
    </script>

</body>
