@using System.Text.Json;
@{ Layout = null; } @*取消導航欄*@
@using Demo.Models;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>歷史班表</title>
    <link href="../css/Manager/HistorySchedule.css" rel="stylesheet">
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
    <style>
       
    </style>
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="bootstrap.bundle.min.js"></script>
    <!-- 導航欄 -->
    <div id="sharedContentContainer"></div>
    <!-- 內容 -->
    <div class="content" style="">
        
            <!-- 標題&選擇按鈕 -->
            <div class="text"> 
                <h2 id="currentMonth" class="font">歷史班表</h2>
                @* <h2 id="currentMonthText" class="font"></h2> *@
            </div>
            <div class="text">
                <div class="dropdown-department">
                    <!-- 年 -->
                    <label for="yearSelector">年份:</label>
                    <select name="yearSelector" class="button-style" id="yearSelector">
                        <option value=null selected>--請選擇年份--</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                    </select>
                    <!-- 月 -->
                    <label for="monthSelector">月份:</label>
                    <select name="monthSelector" class="button-style" id="monthSelector">
                        <option value=null selected>--請選擇月份--</option>
                        <option value="1">一月</option>
                        <option value="2">二月</option>
                        <option value="3">三月</option>
                        <option value="4">四月</option>
                        <option value="5">五月</option>
                        <option value="6">六月</option>
                        <option value="7">七月</option>
                        <option value="8">八月</option>
                        <option value="9">九月</option>
                        <option value="10">十月</option>
                        <option value="11">十一月</option>
                        <option value="12">十二月</option>
                    </select>
                    <!-- 大科別 -->
                    <label for="departmentSelect">部門:</label>
                    <select id="departmentSelect" class="button-style" >
                        <option value=null selected>--請選擇部門--</option>
                        <option value="內科部">內科部</option>
                        <option value="外科部">外科部</option>
                        <option value="心臟血管醫學部">心臟血管醫學部</option>
                        <option value="兒童醫學部">兒童醫學部</option>
                        <option value="婦產部">婦產部</option>
                        <option value="其他專科">其他專科</option>
                        <option value="特色中心">特色中心</option>
                        <option value="新冠肺炎專區">新冠肺炎專區</option>
                    </select>
                    <!-- 小科別 -->
                    <label for="sub-departmentSelect">科別:</label>
                    <select id="sub-departmentSelect" class="button-style">
                        <option value=null selected>--請先選擇部門--</option>
                    </select>
                </div> 
            </div>     
        <!-- 表格 -->  
        <div class="flex">
            <!-- 醫生班數 -->
            <table class="doctor-table">
                <thead>
                    <tr>
                        <th>醫生名字</th>
                        <th>班數</th>
                    </tr>
                </thead>
                <tbody id="doctors-body">   
                <!-- JavaScript 生成 -->   
                </tbody>
            </table>
            <!-- 班表月曆 -->
            <table>
                <thead>
                    <tr>
                        <th class="week">日</th>
                        <th>一</th>
                        <th>二</th>
                        <th>三</th>
                        <th>四</th>
                        <th>五</th>
                        <th class="week">六</th>
                    </tr>
                </thead>
                <tbody id="calendar-body">
                    <!-- JavaScript 生成 -->
                </tbody>
            </table>
        </div>    
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/Manager/HistorySchedule.js" asp-append-version="true"></script>
    <script>
        
        // 使用 fetch 加载共享的 HTML 内容
        fetch('/Manager/ManagerShare')
            .then(response => response.text())
            .then(html => {
                // 将加载的 HTML 插入到共享容器中
                document.getElementById('sharedContentContainer').innerHTML = html;
            }
        );
    </script>      
</body>
</html>



